# Trading Application Configuration
# Copy this file to .env and adjust values as needed

# Database Configuration
DATABASE_URL=sqlite:///./trading_app.db

# API Keys
NEWS_API_KEY=your_news_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Trading Parameters
INITIAL_BALANCE=100000
MAX_POSITION_SIZE=0.05
CONFIDENCE_THRESHOLD=0.6

# Sentiment Analysis Thresholds
BUY_SENTIMENT_THRESHOLD=0.2
SELL_SENTIMENT_THRESHOLD=-0.2

# Rate Limiting (seconds between API calls)
API_RATE_LIMIT=1.0
NEWS_API_RATE_LIMIT=0.2

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Scheduler Times (24-hour format)
MARKET_OPEN_TIME=09:30
SENTIMENT_ANALYSIS_TIME=10:00
STRATEGY_EXECUTION_TIME=10:30
MARKET_CLOSE_TIME=16:00